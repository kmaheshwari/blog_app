<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <% @post.each do |p| %>
    
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1><%=p.title%></h1>
                        
                        <span class="meta">Posted by <a href="#"><%=p.name%></a> on <%= p.created_at%></span>
                    </div>
                </div>
            </div>
        </div>
   

    <!-- Post Content -->
    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <p><%=p.matter%></p>
                </div>
            </div>
        </div>
    </article>

    <hr>
<%end%>
    