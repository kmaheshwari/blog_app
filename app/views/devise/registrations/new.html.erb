

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="modal-body" style="width:55%; margin-left:80px">
  <div class="post-preview">
    <h1 class="post-title">Sign Up</h1>
</div>
    <div class="well">
     

<div class="container">
    <div class="row">
        <form role="form">
            <div class="col-lg-6">
                

                <div class="form-group">
                    <label for="Email">Enter Email</label>
                    <div class="input-group">
                        <%= f.email_field :email, :placeholder => "E.g.123@example.com", :class => 'form-control', autofocus: true %>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="Password">Password</label>
                    <div class="input-group">
                       <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %>
                        <%= f.password_field :password, :placeholder => "********", :class => 'form-control' %>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Confirm_pass">Password confirmation</label>
                    <div class="input-group">
                        <%= f.password_field :password_confirmation, :placeholder => "Password Again", :class => 'form-control', autocomplete: "off" %>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>
                

                                
                <div class="form-group control-group">
                <div><input type="submit" name="submit" id="submit" value="Sign Up" class="btn btn-info pull-right" style="margin:10px"></div>
                <div><input type="reset" name="reset" id="reset" value="Reset" class="btn btn-info pull-right" style="margin:10px"></div>
                <%- if controller_name != 'sessions' %>
                    <button class = "btn btn-info pull-left" style="margin:10px"><span class= "glyphicon glyphicon-user pull-left"></span>
                  <%= link_to "Log in", new_session_path(resource_name)%>
              </button><br />
                <% end -%>
              </div>
            </div>
        </form>
        
                
            </div>
        </div>
        </div>
        </div>
    
 <% end %>


