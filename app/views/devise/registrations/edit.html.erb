
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="modal-body" style="width:55%; margin-left:80px">
    <div class="post-preview">
      <h1 class="post-title">Edit <%= resource_name.to_s.humanize %></h1>
    </div>        
<div class="well">
<div class="container">
    <div class="row">
        <form role="form">
            <div class="col-lg-6">
                

                <div class="form-group">
                    <label for="Email">Enter Email</label>
                    <div class="input-group">
                        <%= f.email_field :email, :placeholder => "E.g.123@example.com", :class => 'form-control', autofocus: true %>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="post-title">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                
                <div class="form-group">
                    <label for="Pass">Password</label>
                    <div class="input-group">
                        <%= f.password_field :password, :placeholder => "********", :class => 'form-control' %> <i class="post-title">(leave blank if you don't want to change it)</i><br />
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Confirm_pass">Password confirmation</label>
                    <div class="input-group">
                        <%= f.password_field :password_confirmation, :placeholder => "Password Again", :class => 'form-control', autocomplete: "off" %>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Pass_con">Confirm password</label>
                    <div class="input-group">
                        <%= f.password_field :password_confirmation, :placeholder => "********", :class => 'form-control' %> <i class="post-title">(we need your current password to confirm your changes)</i><br />
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>

                <div class ="row">
                
                
                <div class="form-group control-group">
                <div><input type="submit" name="submit" id="submit" value="Update" class="btn btn-info pull-right" style="margin:10px"></div>
                <div><input type="reset" name="reset" id="reset" value="Reset" class="btn btn-info pull-right" style="margin:10px"></div>
                </div>
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <span class= "glyphicon glyphicon-plus-sign pull-left"></span>
                      <%= link_to "Sign up", new_registration_path(resource_name), :class => "pull-left" %><br />
                    <% end -%>

                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'%>
                    <span class= "glyphicon glyphicon-question-sign pull-left"></span>
                      <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "pull-left"  %><br />
                <% end -%>

              </div>
            </div>
        </form>
        
    
<% end %>
<div class="post-preview col-md-offset-8">
  <h1 class="post-title ">Unhappy?</h1>
  <div class = "well" style = "margin:20px">
             
 <p> You can unsubscribe anytime if you find any inappropriate content on aur site.</p>
 <h4> Thank You!! </h4>
 <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class=> "btn btn-info pull-right", :style => "margin:20px" %>
 <br><br><br>
</div>
 
<br>
</div>

<%= link_to "Back", :back, :class=> "btn btn-info pull-right", :style => "margin:10px"  %>
</div>
     </div>
    </div>
</div>
